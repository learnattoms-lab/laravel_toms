{% extends 'base.html.twig' %}

{% block title %}OAuth Demo - {{ provider }}{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">{{ provider }} OAuth Demo</h4>
                </div>
                <div class="card-body text-center">
                    <div class="alert alert-info">
                        <h5>{{ message }}</h5>
                        <p>This is a demo page for {{ provider }} OAuth integration.</p>
                    </div>
                    
                    <div class="mt-4">
                        <a href="{{ path('app_home') }}" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Back to Home
                        </a>
                        <a href="{{ path('login') }}" class="btn btn-outline-primary ms-2">
                            <i class="fas fa-sign-in-alt me-2"></i>Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
