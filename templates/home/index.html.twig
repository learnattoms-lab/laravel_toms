{% extends 'base.html.twig' %}

{% block title %}{{ page_title }}{% endblock %}

{% block body %}
<!-- Learn Music Carousel Section -->
<section class="carousel-section py-5 bg-primary text-white">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="display-4 fw-bold">Learn Music with Expert Teachers</h2>
            <p class="lead">Discover your musical potential with personalized online lessons</p>
        </div>
        
        <div id="musicCarousel" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#musicCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#musicCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#musicCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            <h3 class="carousel-title">Master the Piano</h3>
                            <p class="carousel-text">Learn classical, jazz, and contemporary piano techniques from world-class instructors. Perfect for beginners and advanced players alike.</p>
                            <a href="{{ path('register') }}" class="btn btn-light btn-lg">Start Learning Piano</a>
                        </div>
                        <div class="col-lg-6">
                            <img src="https://images.unsplash.com/photo-1520523839897-bd0b52f945a0?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Piano Learning" class="img-fluid rounded-3 shadow-lg">
                        </div>
                    </div>
                </div>
                
                <div class="carousel-item">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            <h3 class="carousel-title">Rock the Guitar</h3>
                            <p class="carousel-text">From acoustic to electric, learn strumming, fingerpicking, and advanced techniques. Join the ranks of guitar legends!</p>
                            <a href="{{ path('register') }}" class="btn btn-light btn-lg">Start Learning Guitar</a>
                        </div>
                        <div class="col-lg-6">
                            <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Guitar Learning" class="img-fluid rounded-3 shadow-lg">
                        </div>
                    </div>
                </div>
                
                <div class="carousel-item">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
                            <h3 class="carousel-title">Find Your Voice</h3>
                            <p class="carousel-text">Develop your singing voice with professional vocal training. Learn breathing techniques, pitch control, and performance skills.</p>
                            <a href="{{ path('register') }}" class="btn btn-light btn-lg">Start Learning Vocals</a>
                        </div>
                        <div class="col-lg-6">
                            <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Vocal Training" class="img-fluid rounded-3 shadow-lg">
                        </div>
                    </div>
                </div>
            </div>
            
            <button class="carousel-control-prev" type="button" data-bs-target="#musicCarousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#musicCarousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
</section>
<!-- Hero Section -->
<section class="hero-section text-white text-center py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">Learn Music Online with Expert Teachers</h1>
                <p class="lead mb-4">Master your favorite instrument with personalized 1-on-1 lessons from professional musicians. Start your musical journey today!</p>
                <div class="d-flex gap-3 justify-content-center justify-content-lg-start">
                    <a href="#plans" class="btn btn-primary btn-lg">Start Free Demo</a>
