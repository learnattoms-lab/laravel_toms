# Database Configuration
DATABASE_URL="mysql://toms_user:toms_password@mysql:3306/toms_lms"

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=${APP_URL}/oauth/google/callback
GOOGLE_DEFAULT_CALENDAR_ID=primary
GOOGLE_SCOPES="https://www.googleapis.com/auth/calendar https://www.googleapis.com/auth/calendar.events https://www.googleapis.com/auth/calendar.events.readonly"

# Azure Blob Storage Configuration
AZURE_BLOB_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account_name;AccountKey=your_account_key;EndpointSuffix=core.windows.net
AZURE_BLOB_CONTAINER=toms-lms
AZURE_BLOB_PUBLIC_BASE=https://your_account_name.blob.core.windows.net/toms-lms

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Application Configuration
APP_URL=http://localhost:8080
APP_ENV=dev
APP_SECRET=your_app_secret_here

# Mailer Configuration (if using SMTP)
MAILER_DSN=smtp://localhost:1025

# Logging Configuration
LOG_LEVEL=info
